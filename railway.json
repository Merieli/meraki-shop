{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": ".docker/Dockerfile.deploy",
    "watchPatterns": [
      "resources/**",
      "app/**"
    ]
  },
  "deploy": {
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "healthcheckPath": "/",
    "healthcheckTimeout": 300,
    "startupTimeout": 300,
    "releaseCommand": "php artisan migrate --force && php artisan storage:link && php artisan config:cache && php artisan route:cache && php artisan view:cache",
    "startCommand": "supervisord -c /etc/supervisor/conf.d/supervisord.conf"
  }
}