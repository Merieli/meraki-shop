{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": ".docker/Dockerfile.deploy",
    "watchPatterns": ["resources/**", "app/**"]
  },
  "deploy": {
    "startCommand": "php artisan migrate --force && supervisord -c /etc/supervisor/conf.d/supervisord.conf"
  }
}